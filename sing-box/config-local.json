{
  "log": {
    "level": "info",
    "output": "./sing.log",
    "timestamp": true
  },
  "dns": {
    "servers": [
      {
        "type": "tcp",
        "tag": "cloudflare",
        "detour": "vless-out",
        "connect_timeout": "10s",
        "server": "1.1.1.1"
      },
      {
        "type": "udp",
        "tag": "alidns",
        "detour": "direct",
        "connect_timeout": "5s",
        "server": "223.5.5.5"
      }
    ],
    "rules": [
      {
        "rule_set": [
          "gfw",
          "discord"
        ],
        "server": "cloudflare"
      }
    ],
    "final": "alidns",
    "strategy": "prefer_ipv4"
  },
  "inbounds": [
    {
      "type": "mixed",
      "tag": "mixed",
      "listen": "0.0.0.0",
      "listen_port": 14443
    }
  ],
  "outbounds": [
    {
      "type": "direct",
      "tag": "direct",
      "domain_resolver": "alidns"
    },
    {
      "type": "block",
      "tag": "block"
    },
    {
      "type": "vless",
      "tag": "vless-out",
      "domain_resolver": "cloudflare",
      "server": "host",
      "server_port": 443,
      "uuid": "uuid",
      "flow": "xtls-rprx-vision",
      "tls": {
        "enabled": true,
        "server_name": "apache.org",
        "utls": {
          "enabled": true,
          "fingerprint": "firefox"
        },
        "reality": {
          "enabled": true,
          "public_key": "public_key",
          "short_id": "110355"
        }
      }
    }
  ],
  "route": {
    "rules": [
      {
        "protocol": "dns",
        "action": "hijack-dns"
      },
      {
        "domain_suffix": ".cn",
        "outbound": "direct"
      },
      {
        "rule_set": [
          "cn",
          "bilibili"
        ],
        "outbound": "direct"
      },
      {
        "rule_set": [
          "gfw",
          "discord"
        ],
        "outbound": "vless-out"
      },
      {
        "rule_set": [
          "csdn",
          "category-ads-all"
        ],
        "outbound": "block"
      }
    ],
    "rule_set": [
      {
        "type": "remote",
        "tag": "cn",
        "url": "https://raw.githubusercontent.com/SagerNet/sing-geosite/refs/heads/rule-set/geosite-cn.srs",
        "download_detour": "vless-out"
      },
      {
        "type": "remote",
        "tag": "bilibili",
        "url": "https://raw.githubusercontent.com/SagerNet/sing-geosite/refs/heads/rule-set/geosite-bilibili.srs",
        "download_detour": "vless-out"
      },
      {
        "type": "remote",
        "tag": "csdn",
        "url": "https://raw.githubusercontent.com/SagerNet/sing-geosite/refs/heads/rule-set/geosite-csdn.srs",
        "download_detour": "vless-out"
      },
      {
        "type": "remote",
        "tag": "gfw",
        "url": "https://raw.githubusercontent.com/MetaCubeX/meta-rules-dat/refs/heads/sing/geo/geosite/gfw.srs",
        "download_detour": "vless-out"
      },
      {
        "type": "remote",
        "tag": "category-ads-all",
        "url": "https://raw.githubusercontent.com/SagerNet/sing-geosite/refs/heads/rule-set/geosite-category-ads-all.srs",
        "download_detour": "vless-out"
      },
      {
        "type": "remote",
        "tag": "discord",
        "url": "https://raw.githubusercontent.com/SagerNet/sing-geosite/refs/heads/rule-set/geosite-discord.srs",
        "download_detour": "vless-out"
      }
    ],
    "final": "direct",
    "auto_detect_interface": true
  }
}
