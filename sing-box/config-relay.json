{
  "log": {
    "level": "error",
    "output": "sing.log",
    "timestamp": true
  },
  "dns": {
    "servers": [
      {
        "type": "https",
        "tag": "cloudflare",
        "connect_timeout": "1s",
        "server": "1.1.1.1"
      }
    ],
    "final": "cloudflare",
    "strategy": "prefer_ipv4",
    "disable_cache": true
  },
  "inbounds": [
    {
      "type": "vless",
      "tag": "vless-in",
      "listen": "0.0.0.0",
      "listen_port": 443,
      "tcp_fast_open": true,
      "users": [
        {
          "name": "name",
          "uuid": "uuid"
        }
      ],
      "tls": {
        "enabled": true,
        "server_name": "borrowed.com",
        "reality": {
          "enabled": true,
          "handshake": {
            "server": "borrowed.com",
            "server_port": 443
          },
          "private_key": "private_key",
          "short_id": "110355",
          "max_time_difference": "2m30s"
        }
      },
      "transport": {
        "type": "ws",
        "path": "/watch",
        "headers": {
          "Accept-Language": "en-US,en;q=0.5",
          "Host": "borrowed.com",
          "User-Agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64; rv:144.0) Gecko/20100101 Firefox/144.0"
        },
        "max_early_data": 2080,
        "early_data_header_name": "Sec-WebSocket-Protocol"
      }
    }
  ],
  "outbounds": [
    {
      "type": "block",
      "tag": "block"
    },
    {
      "type": "vless",
      "tag": "vless-out",
      "tcp_fast_open": true,
      "domain_resolver": "cloudflare",
      "server": "mydomain.com",
      "server_port": 443,
      "uuid": "uuid",
      "flow": "xtls-rprx-vision",
      "tls": {
        "enabled": true,
        "server_name": "borrowed.com",
        "utls": {
          "enabled": true,
          "fingerprint": "firefox"
        },
        "reality": {
          "enabled": true,
          "public_key": "public_key",
          "short_id": "110355"
        }
      }
    }
  ],
  "route": {
    "rules": [
      {
        "ip_is_private": true,
        "outbound": "block"
      }
    ],
    "final": "vless-out",
    "auto_detect_interface": true
  }
}
