Host github.com
	Port 443
	HostName ssh.github.com
	User git
	IdentityFile ~/.ssh/xxx
	IdentitiesOnly yes
	# ProxyCommand nc -X 5 -x 127.0.0.1:14443 %h %p

Host codeberg.org
	Port 22
	HostName codeberg.org
	User git
	IdentityFile ~/.ssh/xxx
	IdentitiesOnly yes
	# ProxyCommand nc -X 5 -x 127.0.0.1:14443 %h %p

Host sshjump
	Port 22
	Hostname xxx
	User xxx
	IdentityFile ~/.ssh/xxx
	IdentitiesOnly yes
	ControlPersist 15m
	StrictHostKeyChecking yes

Host custom
	Port 22
	HostName xxx
	User xxx
	IdentityFile ~/.ssh/xxx
	IdentitiesOnly yes
	ExitOnForwardFailure yes
	ProxyJump sshjump
	# ProxyCommand nc -X 5 -x 127.0.0.1:14443 %h %p

Host * !github.com !codeberg.org
	TCPKeepAlive yes
	ServerAliveInterval 30
	ServerAliveCountMax 3
	ConnectTimeout 5
	ConnectionAttempts 2
	ControlMaster auto
	ControlPersist 10m
	ControlPath ~/.ssh/control/%C.sock
	StrictHostKeyChecking accept-new
	AddKeysToAgent 2h
	LogLevel ERROR
